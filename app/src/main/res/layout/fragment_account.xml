<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.MEETINGO.AccountFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="16dp"
        android:id="@+id/acc_layout_profile"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="16dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/acc_dp"
            android:layout_width="123dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="18dp"
            android:contentDescription="Profile Picture"
            android:src="@drawable/user_male"
            app:layout_constraintBottom_toTopOf="@+id/acc_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/acc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:text="USERNAME"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acc_dp" />


    </android.support.constraint.ConstraintLayout>

<LinearLayout
    android:id="@+id/acc_layout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_margin="16dp"
    android:layout_below="@+id/acc_layout_profile"
    android:orientation="vertical">

    <TextView
        android:id="@+id/acc_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Settings"
        android:textSize="34dp"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/acc_strmsg"
        android:layout_marginHorizontal="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Starred Messages"
        android:textSize="34dp"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/acc_invite"
        android:layout_marginHorizontal="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invite a Friend"
        android:textSize="34dp"
        android:layout_margin="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/acc_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc_layout2"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/acc_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="34dp"
            android:background="@drawable/gradient_red"
            android:text="LOGOUT"/>

    </LinearLayout>
</RelativeLayout>

