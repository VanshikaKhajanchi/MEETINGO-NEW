<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.MEETINGO.Account_settings">


    <TextView
        android:id="@+id/heading_Account_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="34dp"
        android:text="Account Settings"/>

        <ImageView
            android:layout_below="@+id/heading_Account_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/profile_image"
            android:src="@drawable/user_female"/>




    <LinearLayout
        android:layout_below="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:id="@+id/button_layout"
        >

        <Button
            android:id="@+id/update_profilr_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile Picture"
            android:textSize="24dp"/>

        <Button
            android:id="@+id/update_personal_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Personal Details"
            android:textSize="24dp" />


        <Button
            android:id="@+id/delete_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:textSize="24dp"
            />



    </LinearLayout>



</RelativeLayout>
